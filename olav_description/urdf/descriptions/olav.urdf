    <!-- REAR RIGHT WHEEL -->
    <link name="rear_right_wheel_link">
        <visual>
            <geometry>
                <mesh filename="package://olav_description/urdf/meshes/olav_wheel_right.dae"
                      scale="0.01 0.01 0.01" />
